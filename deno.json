{
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "lint": {
    "include": ["src/"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "bracePosition": "nextLine",
    "newLineKind": "lf",
    "spaceAround": false,
    "trailingCommas": "onlyMultiLine",
    "nextControlFlowPosition": "nextLine",
    "operatorPosition": "nextLine",
    "useBraces": "preferNone"
  }
}
